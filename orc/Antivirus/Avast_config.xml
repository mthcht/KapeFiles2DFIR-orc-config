<?xml version="1.0" ?>
<getthis reportall="">
    <output compression="fast"/>
    <location>%SystemDrive%\</location>
    <!--Documentation-->
    <!--https://businesshelp.avast.com/Content/Products/General_Help/LogLocations/BaseAntivirusLogs.htm-->
    <!--https://forensafe.com/blogs/windows_avast.html-->
    <sample name="Avast_AV_Logs_(XP)">
        <ntfs_find path_match="Documents And Settings\All Users\Application Data\Avast Software\Avast\Log\"/>
    </sample>
    <sample name="Avast_AV_Logs">
        <ntfs_find path_match="ProgramData\Avast Software\Avast\Log\"/>
    </sample>
    <sample name="Avast_AV_User_Logs">
        <ntfs_find path_match="Users\*\Avast Software\Avast\Log\"/>
    </sample>
    <sample name="Avast_AV_Index">
        <ntfs_find path_match="ProgramData\Avast Software\Avast\Chest\"/>
    </sample>
    <sample name="Avast_Persistent_Data_Logs">
        <ntfs_find path_match="ProgramData\Avast Software\Persistent Data\Avast\Logs"/>
    </sample>
    <sample name="Avast_Icarus_Logs">
        <ntfs_find path_match="ProgramData\Avast Software\Icarus\Logs"/>
    </sample>
</getthis>
